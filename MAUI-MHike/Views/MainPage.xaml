<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_MHike.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Hikes">

    <Grid RowDefinitions="Auto,*" Padding="16">
        <Grid Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="8">
            <SearchBar x:Name="SearchBar" Placeholder="Search name or location"
                       SearchCommand="{Binding SearchCommand}" />
            <Button Grid.Column="1" Text="+ Add" Clicked="OnAddClicked" />
        </Grid>

        <CollectionView Grid.Row="1" x:Name="HikesView" ItemsSource="{Binding Hikes}" SelectionMode="Single" SelectionChanged="OnSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,8,0,0" HasShadow="False" BackgroundColor="{DynamicResource SecondaryContainer}">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding Location}" />
                            <Label Text="{Binding Date, StringFormat='{}{0:yyyy-MM-dd}'}" />
                            <Label Text="{Binding Meta}" TextColor="{DynamicResource Primary}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
