<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_MHike.Views.HikeFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Hike">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <!-- Dynamic title -->
            <Label x:Name="TitleLabel"
                   Text="Add Hike"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Name -->
            <Entry x:Name="NameEntry"
                   Placeholder="Name *"
                   Keyboard="Default" />

            <!-- Location -->
            <Entry x:Name="LocationEntry"
                   Placeholder="Location *"
                   Keyboard="Default" />

            <!-- Date -->
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                <Label Text="Date" VerticalOptions="Center" />
                <DatePicker x:Name="DatePicker"
                            Grid.Column="1" />
            </Grid>

            <!-- Parking switch -->
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                <Label Text="Parking available"
                       VerticalOptions="Center" />
                <Switch x:Name="ParkingSwitch"
                        Grid.Column="1" />
            </Grid>

            <!-- Length -->
            <Entry x:Name="LengthEntry"
                   Placeholder="Length (km) *"
                   Keyboard="Numeric" />

            <!-- Difficulty -->
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                <Label Text="Difficulty"
                       VerticalOptions="Center" />
                <Picker x:Name="DifficultyPicker"
                        Grid.Column="1"
                        Title="Choose 1â€“5">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>1 - Very Easy</x:String>
                            <x:String>2 - Easy</x:String>
                            <x:String>3 - Medium</x:String>
                            <x:String>4 - Hard</x:String>
                            <x:String>5 - Very Hard</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>

            <!-- Description -->
            <Editor x:Name="DescEditor"
                    Placeholder="Description (optional)"
                    AutoSize="TextChanges"
                    MinimumHeightRequest="80" />

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="12"
                                   Margin="0,8,0,0">
                <Button Text="Save"
                        Clicked="OnSaveClicked"
                        BackgroundColor="{DynamicResource Primary}"
                        TextColor="White" />
                <Button Text="Cancel"
                        Clicked="OnCancelClicked"
                        Style="{DynamicResource OutlinedButtonStyle}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
